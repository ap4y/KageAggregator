  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="#e6e6e6">
    <TableLayout android:layout_width="fill_parent" android:id="@+id/tableLayout1" android:layout_height="wrap_content">
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false" android:gravity="center_horizontal" android:id="@+id/subtitleRow">
            <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#000000" android:padding="5dip" android:id="@+id/lbSeriesCount" android:layout_width="wrap_content" android:text="10 серий" android:width="90dip"></TextView>
            <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#000000" android:padding="5dip" android:id="@+id/lbGroupNames" android:layout_width="wrap_content" android:text="Amaralis[Максимум аниме]" android:width="220dip"></TextView>
        </TableRow>
    </TableLayout>
    
</LinearLayout>
